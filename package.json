{
    "name": "darlene-kay",
    "version": "1.0.0",
    "private": true,
    "scripts": {
    "dev": "concurrently \"npm:watch:sass\" \"npx @11ty/eleventy --serve --port=3000\"",
    "build:css": "npm run build:sass && npm run purge:css && npm run minify:css",
    "build": "npm run build:css && eleventy",
    "watch:sass": "sass --load-path=src/assets/styles src/assets/styles/main.scss:_site/assets/css/main.css --style=expanded --embed-source-map --source-map-urls=relative --watch",
    "build:sass": "sass --load-path=src/assets/styles src/assets/styles/main.scss:_site/assets/css/main.css --style=compressed --no-source-map",
    "purge:css": "purgecss --css _site/assets/css/main.css --content _site/**/*.html --output _site/assets/css/",
    "minify:css": "npx postcss _site/assets/css/main.css -o _site/assets/css/main.css"
    },
    "devDependencies": {
        "@11ty/eleventy": "^3.0.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.1",
        "cssnano": "^7.1.1",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "purgecss": "^7.0.2",
        "sass": "^1.92.1"
    },
    "dependencies": {
        "@11ty/eleventy-img": "^6.0.4",
        "@fullhuman/postcss-purgecss": "^4.1.3"
    }
}
