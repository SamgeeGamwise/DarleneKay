{
    "name": "darlene-kay",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm:watch:sass\" \"npx @11ty/eleventy --serve --port=3000\"",
        "build:css": "sass --load-path=src/assets/styles src/assets/styles/main.scss --style=compressed --no-source-map | npx postcss -o _site/assets/css/main.css",
        "build": "npm run build:css && eleventy",
        "watch:sass": "sass --load-path=src/assets/styles src/assets/styles/main.scss:_site/assets/css/main.css --style=expanded --embed-source-map --source-map-urls=relative --watch",
        "build:sass": "sass --load-path=src/assets/styles src/assets/styles/main.scss:_site/assets/css/main.css --style=compressed --no-source-map"
    },
    "devDependencies": {
        "@11ty/eleventy": "^3.0.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.1",
        "cssnano": "^7.1.1",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "sass": "^1.92.1"
    },
    "dependencies": {
        "@fullhuman/postcss-purgecss": "^4.1.3"
    }
}
