<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title or site.site_name }}</title>
    <link rel="icon" type="image/x-icon" href="{{ '/assets/favicon.ico' | url }}">
    <meta name="description" content="{{ description or site.tagline }}">
    <link rel="preload" href="{{ '/assets/fonts/DancingScript.ttf' | url }}" as="font" type="font/ttf" crossorigin>
    <link rel="preload" href="{{ '/assets/fonts/Merriweather.ttf' | url }}" as="font" type="font/ttf" crossorigin>
    <link rel="preload" href="{{ '/assets/fonts/Montserrat.ttf' | url }}" as="font" type="font/ttf" crossorigin>
    <link rel="stylesheet" href="{{ '/assets/fontawesome/css/all.min.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">
    <script src="{{ '/script/ui/index.js' | url }}" type="module"></script>
  </head>
  <body>
    <header id="header">
      {% include "components/nav.njk" %}
    </header>
    <div class="blocker"></div>

    <main id="content">
      {{ content | safe }}
    </main>

    {% include "components/footer.njk" %}
  </body>
</html>
