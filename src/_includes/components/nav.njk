<nav aria-label="Primary">
  <a id="brand" href="{{ '/' | url }}">
    <img class="logo" src="{{ '/assets/images/logo.webp' | url }}" />
    <h1 class="site-name">
    {{ site.site_name }}
    </h1>
  </a>
  <div class="nav-desktop">
    <ul>
    {% for item in site.nav %}
      {% set isActive = (page.url == item.href) or (page.url == '/' and item.href == '/') %}
      <li>
        <a href="{{ item.href | url }}" {% if isActive %} aria-current="page" class="active-nav" {% endif %}>{{ item.text }}</a>
      </li>
    {% endfor %}
    </ul>
  </div>
  <div class="nav-mobile">
    <button id="menuButton">X</button>
    <ul id="menu" class="dropdown hidden">
    {% for item in site.nav %}
      {% set isActive = (page.url == item.href) or (page.url == '/' and item.href == '/') %}
      <li>
        <a href="{{ item.href | url }}" {% if isActive %} aria-current="page" class="active-nav" {% endif %}>{{ item.text }}</a>
      </li>
    {% endfor %}
    </ul>
  </div>
</nav>
