<footer class="site-footer">
  <div class="footer__brand">
    <a class="logo" href="/"><img src="{{ '/assets/images/logo-footer.png' | url }}" alt="Darlene Kay Painting"></a>
    <p>Darlene Kay provides residential and commercial painting solutions tailored to your project and budget.</p>
    <div class="footer__badges">
      <img src="{{ '/assets/images/williams.png' | url }}" alt="Sherwin-Williams" width="90">
      <img src="{{ '/assets/images/homeadvisor.png' | url }}" alt="HomeAdvisor" width="90">
      <img src="{{ '/assets/images/bbb-a-plus.png' | url }}" alt="BBB A+ Rating" width="250">
    </div>
    <ul class="footer__links">
      {% for item in site.footer %}
        <li>
          <a href="{{ item.href | url }}">{{ item.text }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
  <div class="footer__legal">
    <p>© {{ site.year }} {{ site.site_name }} · Built with Eleventy</p>
  </div>
</footer>
