<footer id="site-footer">
  <div class="footer__container">
    <div class="footer__brand">
      <a class="logo" href="/">
        <img class="logo-image" src="{{ '/assets/images/logo_white.png' | url }}" alt="Darlene Kay Painting">
      </a>
      <p class="logo-text">Darlene Kay Painting</p>
    </div>
    <div class="footer__details">
      <div class="footer__contact">
          <p><i class="fa-solid fa-phone"></i> (720) 933-1762</p>
          <p><i class="fa-solid fa-envelope"></i> roy@darlenekay.com</p>
          <br>
          <p>Monday - Saturday</p>
          <p>8am - 5pm</p>
      </div>
      <div class="footer__info">     
        <p class="h6"><i class="fa-solid fa-map"></i> Service Area</p class="h6">
        <ul>
          <li>
            Aurora
          </li>
          <li>
            East Denver
          </li>
          <li>
            Parker
          </li>
          <li>
            Centennial
          </li>
          <li>
            Castle Rock
          </li>
        </ul>
      </div>
      <div class="footer__content">
        <p class="h6"><i class="fa-solid fa-paint-roller"></i> Services</p class="h6">
        <ul class="footer__links">
          {% for item in site.footer %}
            <li>
              <a href="{{ item.href | url }}">{{ item.text }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="footer__badges">
      <img src="{{ '/assets/images/williams.png' | url }}" alt="Sherwin-Williams" width="85px">
      <img src="{{ '/assets/images/homeadvisor.png' | url }}" alt="HomeAdvisor" width="85px">
      <img src="{{ '/assets/images/bbb-a-plus.png' | url }}" alt="BBB A+ Rating" width="200px">
    </div>
